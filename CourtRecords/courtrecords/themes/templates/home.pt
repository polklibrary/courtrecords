<metal:page
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    use-macro="load: master.pt">
    
    
    <tal:block metal:fill-slot="breadcrumbs">
        <div id="breadcrumbs">
            <a href="http://www.uwosh.edu/archives">Archives &amp; ARC</a>
            <span>&#9002;</span>
            <a href="${request.application_url}">Court Records</a>
        </div>
    </tal:block>
    
    
    <tal:block metal:fill-slot="content">
        <div id="home">

            <div class="home-box">
            
                <div class="col-100">
                    <div class="column-outer archives-blue-border">
                        <span class="heading archives-blue">Court Records Index Search</span>
                        <form method="post" action="${request.application_url}/search">
                            <b>Start your search here</b>
                            <label for="entity" class="hide">Last Name / Institution name</label>
                            <input id="entity" type="text" value="" name="entity" placeholder="Last name / Institution name" />

                            <label for="first-name" class="hide">First Name</label>
                            <input id="first-name" type="text" value="" name="firstname" placeholder="First name" />
                            <input id="search-mode" type="hidden" name="mode" value="basic" />

                            <input class="button" type="submit" value="Search" name="search" />
                            
                            <br />
                            
                            <div class="browse">
                                <a href="${request.application_url}/search?mode=browse">or browse the collection.</a>
                            </div>
                            
                            <div class="details">
                                ${warning_info}
                            </div>
                                        
                        </form>
                    </div>
                </div>

                
                <div class="clear"></div>
                
                <div class="col-50 col-t-50">
                    <div class="fix-height column-outer archives-blue-border">
                        <span class="heading archives-blue">Court Records</span>
                        <div class="archives-description"><tal:block replace="structure courtrecord_info"></tal:block></div>
                    </div>
                </div>
                
                <div class="col-50 col-t-50">
                    <div class="fix-height column-outer archives-blue-border">
                        <span class="heading archives-blue">Naturalization Records</span>
                        <div class="archives-description"><tal:block replace="structure naturalizations_info"></tal:block></div>
                    </div>
                </div>
                
                <div class="clear"></div>
                
                <div class="col-100">
                    <div class="column-outer archives-blue-border">
                        <span class="heading archives-blue">Records Information</span>
                        <div class="archives-description"><tal:block replace="structure record_info"></tal:block></div>
                    </div>
                </div>
                
            </div>
           
            
        </div>
        
        
    </tal:block>
     
</metal:page>