<metal:page
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    use-macro="load: master.pt">
    
    <tal:block metal:fill-slot="content">
        <div id="home">
            <h2 class="heading">
                Court Records
            </h2>
            <div id="breadcrumbs">
                <a href="http://www.uwosh.edu/library">Polk Library</a>
                <span>&rsaquo;</span>
                <a href="http://www.uwosh.edu/archives">Archives</a>
                <span>&rsaquo;</span>
                <a href="${request.application_url}">Court Records</a>
            </div>
            
            <div class="home-box">
                <span style="height: 2px;">&nbsp;</span>
                
                <div class="details">
                    ${warning_info}
                </div>
                
                <form method="post" action="${request.application_url}/search">
                    <span class="heading">Start your search here</span>
                    <label for="entity" class="hide">Last Name / Institution name</label>
                    <input id="entity" type="text" value="" name="entity" placeholder="Last name / Institution name" />

                    <label for="first-name" class="hide">First Name</label>
                    <input id="first-name" type="text" value="" name="firstname" placeholder="First name" />
                    <input id="search-mode" type="hidden" name="mode" value="basic" />

                    <input class="button" type="submit" value="Search" name="search" />
                    

                    
                    <br />
                    
                    <div class="browse">
                        <a href="${request.application_url}/search?mode=browse">or browse the collection.</a>
                    </div>
                    

                    
                    
                </form>
                
                <div class="info0">
                    <span class="heading">Court Records</span>
                    <tal:block replace="structure courtrecord_info"></tal:block>
                </div>
                
                <div class="info1">
                    <span class="heading">Naturalization Records</span>
                    <tal:block replace="structure naturalizations_info"></tal:block>
                </div>
                
                <div class="info2">
                    <span class="heading">Records Information</span>
                    <tal:block replace="structure record_info"></tal:block>
                </div>
                
            </div>
            
            <div>
                <a href="about" class="about1 left">
                    About the records
                </a>
                <a href="http://www.uwosh.edu/archives/contact.htm" class="contact1 left">
                    Contact us
                </a>
                <div class="clear"></div>
            </div>
            
            
            
            
            
