<metal:page
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    use-macro="load: master.pt">
    
    
    <tal:block metal:fill-slot="header">
        - Editing Record
    </tal:block>
    
    
    <tal:block metal:fill-slot="css">
    </tal:block>
    
    <tal:block metal:fill-slot="js">
        <script type="text/javascript" src="${request.static_url('courtrecords:themes/js/scaffold.js')}"></script>
        <script>
            $(document).ready(function(){
            
                
            });
        </script>
    </tal:block>
     
    <tal:block metal:fill-slot="content">
        
        <form id="manage-users" action="" method="post" >
            
            <h2>Users</h2>
            <div id="manage-users" class="row">
                <table id="manage-users" class="tablesorter">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Group</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr tal:repeat="user users">
                            <td>${user.id}</td>
                            <td>${user.email}</td>
                            <td>${user.group}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            

        <div class="buttons">
            <input class="button" type="submit" value="Save Record" name="edit.Form.submit.save" />
        </div>

        
        
    </tal:block>
     
</metal:page>