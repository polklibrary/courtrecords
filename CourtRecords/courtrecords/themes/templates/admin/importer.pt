<metal:page
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    use-macro="load: master.pt">
    
    <tal:block metal:fill-slot="header">
        - Import Tool
    </tal:block>
    
    
    <tal:block metal:fill-slot="css">
    </tal:block>
    
    <tal:block metal:fill-slot="js">
        <script>
            $(document).ready(function(){
            
            });
        </script>
    </tal:block>
     
    <tal:block metal:fill-slot="content">
    

        <div id="manage-importer">
        
            <form method="post" accept-charset="utf-8" enctype="multipart/form-data">
            
                <div class="row">
                    <label>Cases: </label>
                    <input type="file" name="cases" value="" /> <span class="req">*required</span>
                    
                    <label>Cases Fields:</label>
                    <input type="text" name="case.fields" value="case_id,case_number,actiontype,year,container,container_number,subset,notes,county,court,call_number" size="120" /> <span class="req">*required</span>
                
                </div>
                
                <div class="row">
                    <label>Entities: </label>
                    <input type="file" name="entities" value="" />  <span class="req">*required</span>
                    
                    <label>Entities Fields: </label>
                    <input type="text" name="entity.fields" value="case_id,entity,prefix,lastname,firstname,middlename,suffix,alternatename,role" size="120" /> <span class="req">*required</span>
                
                </div>
                
                <div class="row">
                    <label>Import Identififer: </label>
                    <input type="text" name="import.marker" value="" size="20" /> 
                    <span class="req">*required</span> 
                    <i>Provide a unique filename for these cvs files such as "Winnebago Circuit Files".  This is not seen, it is for re-indexing purposes.</i>
                    
                    <label>Archives: </label>
                    <select name="archive">
                        <option tal:repeat="archive archives" value="${archive.id}">${archive.name}</option>
                    </select>
                    
                    <label>Fix Firstname Issues: (Multiple entities, prefix/suffix combinations, middle name extractions, etc...)</label>
                    <select name="firstname.fix">
                        <option value="0">No</option>
                        <option value="1">Yes</option>
                    </select>
                    
                    <label>Enforce Container Type</label>
                    <select name="container.enforcer">
                        <option value="0">(Do nothing)</option>
                        <option tal:repeat="container containers" value="${container.id}">${container.container}</option>
                    </select>
                    
                    <label>Enforce Call Number</label>
                    <select name="callnumber.enforcer">
                        <option value="0">(Do nothing)</option>
                        <option tal:repeat="callnumber callnumbers" value="${callnumber.id}">${callnumber.call_number}</option>
                    </select>
                    
                </div>
                <div class="buttons">
                    <input class="button" type="submit" name="submit" value="GO" />
                </div>
            </form>
        </div>
        
        
        
    </tal:block>
     
</metal:page>